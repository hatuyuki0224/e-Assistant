<html>
<head>
  <meta charset="UTF-8">
  <link rel="icon" href="/img/logo.ico">
  <link rel="stylesheet" type="text/css" href="application.css">
  <title>
    e-Assistant
  </title>

</head>
<body>
  <div class="top-bar">
    <%= link_to("e-Assistant", "/")%>
    <div class="userID">
      Welcome back,
      <%= link_to("戻る", "/users/#{@current_user.id}" )%>
      <div class="tooltip">
        <a href="<%= "/users/#{@current_user.id}/edit"%>"><img src="/img/button-setting.png" alt="User setting" width="15" height="15"> <%= @current_user.user_id%>!</a>
        <div class="tooltiptext">
          Edit account
        </div>
      </div>
      <%= link_to("Logout", "/logout", {method: :post})%>
    </div>
  </div>

  <h1>タスク一覧</h1>
  <%= link_to 'タスク追加', new_task_path, remote: true %>
  <div id="task-form"></div>
  <table id="tsk">
    <thead>
      <tr>
        <th>タスク名</th>
        <th>締切日時</th>
        <th>かかる時間</th>
        <th>優先度</th>
        <!-- <th>色</th>
        <th>コメント</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
      <% if(task.task_user.to_i == @current_user.id)%>
      <tr>
        <td><%= link_to task.task_name, edit_task_path(task), remote: true %></td>
        <td><%= task.deadline_date %>:<%= task.deadline_time.hour%>:<%= task.deadline_time.min%></td>
        <% if(task.required_time.hour == 0)%>
        <td><%= task.required_time.min %>分</td>
        <% else %>
        <td><%= task.required_time.hour %>時間<%= task.required_time.min %>分</td>
        <% end %>
        <td><%= task.priority %></td>
        <!-- <td><%= task.color %></td>
        <td><%= task.comment %></td> -->

      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
  <br>
</body>
</html>
