<p class=".flash"></p>


<html>
<head>
  <meta charset="UTF-8">
  <link rel="icon" href="/img/logo.ico">
  <link rel="stylesheet" type="text/css" href="application.css">
  <title>
    e-Assistant
  </title>

</head>
<body>
  <div class="top-bar">
    <%= link_to("e-Assistant", "/")%>
    <div class="userID">
      Welcome back,
      <%= link_to("戻る", "/users/#{@current_user.id}" )%>
      <div class="tooltip">
        <a href="<%= "/users/#{@current_user.id}/edit"%>"><img src="/img/button-setting.png" alt="User setting" width="15" height="15"> <%= @current_user.user_id%>!</a>
        <div class="tooltiptext">
          Edit account
        </div>
      </div>
      <%= link_to("Logout", "/logout", {method: :post})%>
    </div>
  </div>

  <h1>タスク一覧</h1>

  <table id="tsk">
    <thead>
      <tr>
        <th>タスク名</th>
        <th>締切日時</th>
        <th>かかる時間</th>
        <th>優先度</th>
        <th>色</th>
        <th>コメント</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
      <% if(task.task_user.to_i == @current_user.id)%>
      <%= task.task_user.to_i %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.deadline_date %>:<%= task.deadline_time.hour %>:<%= task.deadline_time.min %></td>
        <td><%= task.required_time.hour %>:<%= task.required_time.min %></td>
        <td><%= task.priority %></td>
        <td><%= task.color %></td>
        <td><%= task.comment %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task), remote: true %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'タスク追加', new_task_path, remote: true %>
  <div id="task-form"></div>
</body>
</html>
