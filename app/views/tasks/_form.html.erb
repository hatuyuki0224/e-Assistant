<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :task_name %>
    <%= form.text_field :task_name, id: :task_task_name %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline, {minute_step: 5}, id: :task_deadline, value: Date.today, required: false %>
  </div>

  <div class="field">
    <%= form.label :required_time %>
    <%= form.text_field :required_time, id: :task_required_time %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority, id: :task_priority %>
  </div>

  <div class="field" id="task-color">
    <%= form.label :color %>
    <%= form.color_field :color, id: :task_color %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :task_comment, :size => "50x5", :maxlength => "500" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
